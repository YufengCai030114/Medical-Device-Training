<!-- JavaScript Libraries -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Registration Form Functionality -->
<script>
    // PostgREST base URL
    const API_BASE_URL = 'http://localhost:3000';

    $(document).ready(function () {
        // Toggle password visibility
        $('#togglePassword').on('click', function () {
            const passwordInput = $('#password');
            const icon = $(this).find('i');

            if (passwordInput.attr('type') === 'password') {
                passwordInput.attr('type', 'text');
                icon.removeClass('fa-eye').addClass('fa-eye-slash');
            } else {
                passwordInput.attr('type', 'password');
                icon.removeClass('fa-eye-slash').addClass('fa-eye');
            }
        });

        // Form validation and submission
        $('#registerForm').on('submit', function (e) {
            e.preventDefault();

            const username = $('#username').val().trim();
            const email = $('#email').val().trim();
            const password = $('#password').val();
            const confirmPassword = $('#confirmPassword').val();
            const agreed = $('#termsAgreement').is(':checked');

            // Basic validation
            if (!username || !email || !password || !confirmPassword) {
                showAlert('Please fill in all required fields.', 'danger');
                return;
            }

            if (username.length < 4) {
                showAlert('Username must be at least 4 characters.', 'danger');
                return;
            }

            if (password !== confirmPassword) {
                showAlert('Passwords do not match. Please try again.', 'danger');
                return;
            }

            if (password.length < 8) {
                showAlert('Password must be at least 8 characters long.', 'danger');
                return;
            }

            if (!agreed) {
                showAlert('You must agree to the terms and conditions.', 'danger');
                return;
            }

            // Hide any previous alerts
            $('#registerAlert').addClass('d-none');

            // Disable submit button and show loading state
            const submitBtn = $(this).find('button[type="submit"]');
            const originalBtnText = submitBtn.html();
            submitBtn
                .html('<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>Creating account...')
                .prop('disabled', true);

            // Send registration request to PostgREST
            $.ajax({
                url: API_BASE_URL + '/rpc/register_user',
                method: 'POST',
                contentType: 'application/json',
                dataType: 'json',
                data: JSON.stringify({
                    p_username: username,
                    p_email: email,
                    p_password: password
                }),
                success: function (response) {
                    showAlert('Your account has been created successfully! Redirecting to login...', 'success');

                    // Redirect to login page after 1.5 seconds
                    setTimeout(function () {
                        window.location.href = 'login.html';
                    }, 1500);
                },
                error: function (xhr) {
                    let msg = xhr.responseText || 'Registration failed. Please try again.';

                    if (msg.includes('username already exists')) {
                        msg = 'This username is already taken.';
                    } else if (msg.includes('email already exists')) {
                        msg = 'This email is already registered.';
                    }

                    showAlert(msg, 'danger');
                    submitBtn.html(originalBtnText).prop('disabled', false);
                }
            });
        });

        // Function to show alert message
        function showAlert(message, type) {
            const alertElement = $('#registerAlert');
            alertElement
                .removeClass('d-none alert-success alert-danger')
                .addClass('alert-' + type)
                .text(message);

            // Scroll to alert
            $('html, body').animate({
                scrollTop: alertElement.offset().top - 100
            }, 200);
        }
    });
</script>
